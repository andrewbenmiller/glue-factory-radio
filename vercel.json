{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "destination": "https://gluefactoryradio.com/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "www.gluefactoryradio.com"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/splash.html",
      "has": [
        {
          "type": "host",
          "value": "gluefactoryradio.com"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/splash-logo.png",
      "dest": "/splash-logo.png"
    },
    {
      "src": "/splash.html",
      "dest": "/splash.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(favicon\\.ico|.*\\.png|.*\\.jpg|.*\\.jpeg|.*\\.gif|.*\\.svg|.*\\.ico|manifest\\.json|robots\\.txt)",
      "dest": "/$1"
    }
  ]
}

