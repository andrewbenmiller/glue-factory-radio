{
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "header", "key": "host", "value": "radio.gluefactorymusic.com" }],
      "destination": "https://gluefactoryradio.com/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [{ "type": "header", "key": "host", "value": "www.radio.gluefactorymusic.com" }],
      "destination": "https://gluefactoryradio.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
